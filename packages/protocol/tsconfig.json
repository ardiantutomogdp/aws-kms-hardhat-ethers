{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "allowJs": true,

    "target": "ES2017",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "rootDirs": ["./src", "./scripts", "./test"]
  },
  "files": ["./hardhat.config.ts"],
  "include": ["./test", "./src", "./scripts"],
  "exclude": ["dist", "node_modules"]
}
