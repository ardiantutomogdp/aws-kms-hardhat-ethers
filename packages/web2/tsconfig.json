{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "allowJs": true,
    "target": "es2022",
    "module": "commonjs",
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "rootDirs": ["./src", "./scripts", "./test"]
  },
  "exclude": ["dist", "node_modules"]
}
